<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/tv_1"
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.69" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.08" />
    <ImageView
        android:id="@+id/img1"
        android:layout_width="55sp"
        android:layout_height="45sp"
        android:background="@drawable/ic_rectange1"
        app:layout_constraintBottom_toTopOf="@id/gl1"
        app:layout_constraintLeft_toRightOf="@id/gl2"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.3"/>
    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Video"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/gl1"
        app:layout_constraintLeft_toRightOf="@id/gl3"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.73" />
    <ImageView
        android:id="@+id/img2"
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:background="@drawable/ic_but"
        app:layout_constraintBottom_toTopOf="@id/gl1"
        app:layout_constraintLeft_toRightOf="@id/gl4"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.85" />
    <ImageView
        android:id="@+id/img3"
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:background="@drawable/ic_hinhtron"
        app:layout_constraintBottom_toTopOf="@id/gl1"
        app:layout_constraintLeft_toRightOf="@id/gl5"/>
    <ImageView
        android:id="@+id/img4"
        android:layout_width="20sp"
        android:layout_height="25sp"
        android:background="@drawable/ic_daux"
        app:layout_constraintBottom_toTopOf="@id/gl1"
        app:layout_constraintLeft_toRightOf="@id/gl5"/>

    <ImageView
        android:id="@+id/img5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="52dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/ic_line"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>